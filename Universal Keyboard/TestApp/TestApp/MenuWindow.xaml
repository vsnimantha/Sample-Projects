<Window x:Class="TestApp.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MenuWindow" Height="100" Width="300" Background="Beige" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button x:Name="UniversalKeyboardButton" Background="Black" Foreground="White" Content="Universal" Grid.Row="1" Grid.Column="0"></Button>
        <Button x:Name="EmailKeyboardButton" Background="LightBlue" Content="Email" Grid.Row="1" Grid.Column="2"></Button>
        <Button x:Name="NumberKeyboardButton" Content="Number" Background="#64000000" Foreground="White" Grid.Row="1" Grid.Column="4"></Button>
    </Grid>
</Window>
