<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="340" Width="340" 
        WindowStartupLocation="Manual"
        Left="0"
        Top="0"
        ResizeMode="NoResize" Background="Transparent" AllowsTransparency="True" WindowStyle="None" Topmost="False">
    <Border CornerRadius="5" BorderBrush="#5DADE2" BorderThickness="3" Background="#32000000"> <!--Background="#9634495E"-->
        <Grid x:Name="gridmain">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="95*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="92*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="gridKeyboard" Grid.Row="0" Grid.ColumnSpan="2">

            </Grid>
            <TextBox x:Name="txt" Grid.Row="1"  Grid.Column="0"></TextBox>
            <Button x:Name="btnclose" Grid.Row="1" Grid.Column="1" Content="close" Click="btnclose_Click"></Button>
        </Grid>
        
    </Border>
</Window>
