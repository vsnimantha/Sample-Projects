                <Button.Triggers>
                    <EventTrigger RoutedEvent="Button.Click">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation 
                                Storyboard.TargetName="rectSkew" 
                                Storyboard.TargetProperty="AngleX" 
                                From="0"
