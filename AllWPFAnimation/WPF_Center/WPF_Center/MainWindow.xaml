                                Storyboard.TargetProperty="Y" 
                                From="0"
                                To="100"
                                Duration="0:0:5" 
                                AutoReverse="True"/>

                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button x:Name="btn_rotate" Content="Rotate Transform Left" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Height="19" Margin="19,156,0,0">
