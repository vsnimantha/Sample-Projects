                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button x:Name="btn_down" Content="Translate Transform Down" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Height="19" Margin="19,84,0,0">
