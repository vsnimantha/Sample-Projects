<Window x:Class="WindowMovingToSecondaryScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed">
    <Grid>
        <Button Width="100" Height="100" Content="Open Secondary" Click="Button_Click" Margin="10,10,407,209" Background="DarkGreen"/>
        <Button Width="100" Height="100" Content="Close Secondary" Click="Button_Click_1" Margin="207,10,210,209" RenderTransformOrigin="2.075,0.458" Background="DarkRed"/>
        <TextBox x:Name="TextBoxMessage" HorizontalAlignment="Left" Height="179" Margin="117,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="297" RenderTransformOrigin="0.5,0.5" FontSize="20" TextChanged="TextBoxMessage_TextChanged"/>
        <Button Width="100" Height="100" Content="Move Secondary" Click="Button_Click_2" Margin="375,10,42,209" RenderTransformOrigin="2.075,0.458" Background="Yellow"/>
    </Grid>
</Window>
